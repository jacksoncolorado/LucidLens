{
  "manifest_version": 3,
  "name": "Privacy Lens",
  "version": "1.0.0",
  "description": "Privacy Lens shows what privacy data websites collect and provides an AI-powered privacy summary.",

  "permissions": [
    "tabs",
    "storage",
    "cookies",
    "webRequest",
    "activeTab",
    "scripting"
  ],

  "host_permissions": [
    "<all_urls>"
  ],

  "background": {
    "service_worker": "background.js",
    "type": "module"
  },

  "action": {
    "default_popup": "popup.html",
    "default_title": "Privacy Lens"
  },

  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScripts/privacyScanner.js"],
      "run_at": "document_idle"
    }
  ],

  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; connect-src https://api.x.ai https://*.x.ai"
  }
}
